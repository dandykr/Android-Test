<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/grey800</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeHome" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/grey700</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <!-- Launcher application theme. -->
    <style name="LauncherTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/bg_launcher</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>
    
    <!-- Progressbar theme. -->
    <style name="whiteAccent" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorAccent">@color/white</item>
        <item name="android:colorControlActivated">@color/white</item>
    </style>

    <!-- Progressbar theme. -->
    <style name="blueAccent" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
    </style>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog_fragment</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/grey800</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="ButtonBlue" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_btn_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ButtonGradient" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_gradient_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>
