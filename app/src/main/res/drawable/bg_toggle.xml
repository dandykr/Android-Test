<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient android:angle="45" android:endColor="#ff9de5ff" android:startColor="#ffaca8ff" />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient android:angle="45" android:startColor="#ffaca8ff" android:centerColor="#ff9de5ff" android:endColor="#ffd5fdff"  />

        </shape>
    </item>
    <item >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="@color/white"/>
            <stroke android:color="#ff9de5ff" android:width="1dp"/>

        </shape>
    </item>

</selector>